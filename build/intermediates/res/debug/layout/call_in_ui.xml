<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Home" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/location_bg"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="Larson"
                android:textColor="@color/antiquewhite"
                android:textSize="36sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:paddingRight="20dp"
                android:singleLine="true"
                android:text="来电"
                android:textColor="@color/antiquewhite"
                android:textSize="32sp" />

            <Chronometer
                android:id="@+id/calling_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right"
                android:paddingRight="20dp"
                android:singleLine="true"
                android:textColor="@color/antiquewhite"
                android:textSize="32sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/call_bottom"
            android:visibility="visible" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/slide_bg" >

                <TextView
                    android:id="@+id/slide"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/decline"
                    android:layout_toRightOf="@+id/answer"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="移动滑块"
                    android:textColor="@color/gray"
                    android:textSize="32sp" />

                <ImageButton
                    android:id="@+id/decline"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/no_slide"
                    android:src="@drawable/no_des" />

                <ImageButton
                    android:id="@+id/answer"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/yes_slide"
                    android:src="@drawable/yes_des" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/call_bottom"
            android:visibility="gone" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" >

                <Button
                    android:id="@+id/endcall"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/endcallbg"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="结束通话"
                    android:textColor="@color/antiquewhite"
                    android:textSize="34sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout><!-- From: file:/home/larson/larsoncode/StudioProject/pocketManager/res/layout/call_in_ui.xml -->