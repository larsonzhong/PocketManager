    <style name="function_type_style">
        <item name="android:layout_margin">4dip</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="topbar_bg">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/top_bar_bg</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">46.0dip</item>
    </style>

    <style name="topbar_text">
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">#40000000</item>
        <item name="android:shadowDy">-2.0</item>
        <item name="android:shadowRadius">4.0</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="topbar_btn">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="topbar_left_btn" parent="@style/topbar_btn">
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="topbar_right_btn" parent="@style/topbar_btn">
        <item name="android:layout_marginRight">10.0dip</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="goalRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_drawable</item>
    </style>

    <style name="account_more_list_text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center|left</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">22dip</item>
        <item name="android:paddingLeft">25dip</item>
        <item name="android:background">@drawable/account_more_item_background</item>
    </style>

    <style name="AppTheme" parent="@android:style/Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>

    <!-- 这是和上面那个关联的 -->
    <style name="activityAnimation" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/back_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/back_exit</item>
    </style>

    <style name="spinnerImageStyle">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginLeft">270dip</item>
        <item name="android:layout_marginRight">20dip</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:background">@drawable/exp_normal</item>
    </style>

    <!-- 以下是pupupWindow的内容 -->
    <style name="PopDownMenu">
        <item name="@android:windowEnterAnimation">@anim/grow_from_topleft_to_bottomright</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottomright_to_topleft</item>
    </style>

    <style name="GrowFromBottom">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottom</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_top</item>
    </style>

    <style name="GrowFromTop">
        <item name="@android:windowEnterAnimation">@anim/grow_from_top</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottom</item>
    </style>
    <!-- 以上是pupupWindow -->

    <style name="helpTitleStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">12.0dip</item>
        <item name="android:paddingRight">12.0dip</item>
        <item name="android:paddingTop">15.0dip</item>
        <item name="android:textColor">#ff3f3f3f</item>
        <item name="android:textSize">18.0sp</item>
    </style>

    <style name="helpContentStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">12.0dip</item>
        <item name="android:paddingRight">12.0dip</item>
        <item name="android:paddingTop">15.0dip</item>
        <item name="android:paddingBottom">15.0dip</item>
        <item name="android:textColor">#ff9e9e9e</item>
        <item name="android:textSize">15.0sp</item>
